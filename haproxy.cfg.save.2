frontend https-in
  bind *:443 ssl crt /keys/test.pem
  http-request redirect scheme https unless { ssl_fc }
  mode http
  option forwardfor
  regadd X-Forwarded-Proto:\ https

  default_backend node1

backend node1
  mode http
  balance roudrobin
  option http-server-close
  option forwardfor
  option httpchk GET /check

  server node1 node1:443,8080 maxconn 32
